.list {
  background: #fff;
}
.list .order-item-active {
  background: #f9f9f9;
}
.list .order-item {
  border-bottom: 4px solid #f0f0f0;
  position: relative;
  padding: 15rpx;
}
.list .order-item .gender-constraint {
  top: 0;
  right: 0;
  width: 40px;
  height: 40px;
  position: absolute;
  z-index: 90;
}
.list .order-item .gender-constraint .ribbon-wrapper {
  width: 72px;
  height: 67px;
  overflow: hidden;
  position: absolute;
  top: -1px;
  right: 0px;
}
.list .order-item .gender-constraint .ribbon-wrapper .ribbon {
  font: bold 15px Sans-Serif;
  text-align: center;
  text-shadow: rgba(255, 255, 255, 0.5) 0px 1px 0px;
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  position: relative;
  padding: 3px 0;
  left: -8px;
  top: 14px;
  width: 120px;
  color: #ffffff;
  -webkit-box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
  font-size: 12px;
}
.list .order-item .item-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 15rpx 0;
}
.list .order-item .item-top .avatar {
  border-radius: 50%;
  width: 75rpx;
  height: 75rpx;
}
.list .order-item .item-top .info {
  padding: 0 10rpx;
  font-size: 28rpx;
}
.list .order-item .item-top .info .gender {
  width: 28rpx;
  height: 28rpx;
}
.list .order-item .item-top .info .time,
.list .order-item .item-top .info .college {
  font-size: 22rpx;
  color: #8B8989;
  margin-left: 10rpx;
}
.list .order-item .item-content {
  font-size: 22rpx;
  color: #000;
  margin: 10rpx 0;
}
.list .order-item .item-content .title {
  padding: 0rpx 20rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  font-size: 25rpx;
  border-left: 3px solid #438EFC;
}
.list .order-item .item-content .money {
  margin-right: 12rpx;
  color: #FF5164;
  font-size: 32rpx;
  font-weight: bold;
  float: right;
}
.list .order-item .item-content image {
  width: 25rpx;
  height: 25rpx;
}
.list .order-item .item-content .address,
.list .order-item .item-content .description {
  line-height: 28rpx;
}
.list .order-item .item-content .address .iconfont,
.list .order-item .item-content .description .iconfont {
  font-size: 20rpx;
}
.list .order-item .item-bottom {
  padding: 10rpx 0;
}
.list .order-item .item-bottom .tag {
  display: inline-block;
  font-size: 22rpx;
  margin: 0 8rpx;
  padding: 8rpx;
  color: #fff;
}
.list .order-item .item-bottom .grab {
  font-size: 22rpx;
  display: inline-block;
  background: #fff;
  color: #438EFC;
  border: 1px solid #438EFC;
  line-height: 40rpx;
  float: right;
}
.list .order-item .item-bottom .order-task-active {
  background: #1C79FF;
  color: #fff;
}
.list .load-more {
  font-size: 25rpx;
  text-align: center;
  padding: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.list .load-more .loading {
  margin-right: 5px;
}
