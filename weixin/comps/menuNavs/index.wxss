.menu .menus {
  background: #fff;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #898989;
  border-bottom: 1px solid #f5f5f5;
}
.menu .menus .nav-item {
  flex: 1;
  text-align: center;
}
.menu .menus .nav-item.active {
  color: #3385ff;
}
.menu .menus .nav-item.active .title {
  height: 100%;
  display: inline-block;
  border-bottom: 3px solid #3385ff;
  box-sizing: border-box;
}
.menu .sub-menus {
  background: #fff;
  line-height: 70rpx;
  display: flex;
  flex-direction: row;
  font-size: 27rpx;
  color: #898989;
  border-bottom: 1px solid #f5f5f5;
}
.menu .sub-menus .sub-nav-item {
  padding: 0 25rpx;
}
.menu .sub-menus .sub-nav-item.active {
  color: #3385ff;
}
.menu .sub-menus .sub-nav-item.active .title {
  height: 100%;
  display: inline-block;
}
