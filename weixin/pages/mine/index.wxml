<import src="/comps/user/avatar.wxml"/>
<import src="/comps/toast/index.wxml"/>
<view id="mine">
    <template is="toast" data="{{...toast}}"></template>
    <view class="header">

        <block wx:if="{{userinfo}}">
            <template is="avatar" data="{{...userinfo,avatarUrl:avatarUrl}}"></template>
            <view class="info">
                <view class="username iconfont icon-{{userinfo['gender']==null?'':(userinfo['gender']==0?'male':'female')}}">{{userinfo['nickname']}}</view>
                <block wx:if="{{userinfo['college_name']}}">
                    <view class="college">{{userinfo['college_name']}}</view>
                </block>
                <block wx:else>
                    <view
                            class="college"
                            bindtap="$bindRoute"
                            data-url="/pages/mine/changeCollege/index"
                    >
                        没有选择学校
                    </view>
                </block>

            </view>
            <view class="signout iconfont icon-power" bindtap="onSignOut" style="color: #f00"></view>
        </block>
        <block wx:else>
            <view bindtap="$bindRoute"
                  data-url="/pages/sign/signIn/index">
                <template is="avatar" data="{{...userinfo,avatarUrl:avatarUrl}}"></template>
                <view class="info"

                >登录/注册
                </view>
            </view>
        </block>

    </view>
    <view class="menu">
        <view class="menu-item">
            <view class="iconfont icon-question" style="color:#51C332;"></view>
            <text>常见问题</text>
        </view>
        <view class="menu-item">
            <view class="iconfont icon-feed-back" style="color:#4285F4;"></view>
            <text>反馈</text>
        </view>
        <view
                class="menu-item"
                bindtap="$bindRoute"
                data-url="/pages/mine/about/index"
        >
            <view class="iconfont icon-our" style="color:#EA4335;"></view>
            <text>关于我们</text>
        </view>
        <block wx:if="{{userinfo}}">
            <view
                    bindtap="$bindRoute"
                    data-url="/pages/mine/setting/index"
                    class="menu-item"
            >
                <view class="iconfont icon-setting" style="color:#FBBC05;"></view>
                <text>设置</text>
            </view>
        </block>
    </view>
</view>
