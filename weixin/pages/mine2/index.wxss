#mine .user-info {
  background: #3385ff;
  color: #fff;
  border-radius: 0 0 15% 15%;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
}
#mine .user-info .avatar {
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #ccc;
  margin: 10rpx 20rpx;
}
#mine .money {
  border-bottom: 5px solid #f5f5f5;
  padding: 20rpx 0;
}
#mine .money .money-inner {
  width: 70%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
#mine .money .money-inner .item {
  flex: 1;
  font-size: 30rpx;
}
#mine .menu .menu-group .menu-title {
  background: #f5f5f5;
  font-size: 28rpx;
  padding-left: 15rpx;
  line-height: 50rpx;
}
#mine .menu .menu-group .menu-list .menu-item {
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 0;
  font-size: 32rpx;
  border-top: 1rpx solid #e6e6e6;
}
#mine .menu .menu-group .menu-list .menu-item .iconfont {
  margin: 0 15rpx;
}
