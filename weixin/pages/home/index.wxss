@import "/comps/order/list/index.wxss";
@import "/comps/menuNavs/index.wxss";
#home .top {
  background: #3385ff;
  padding-top: 20rpx;
}
#home .top .college {
  background: #fff;
  display: flex;
  flex-direction: row;
  border: 1px solid #f8f8f8;
  padding: 15rpx;
  margin: 0 30rpx 0 30rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border: 1px solid #f5f5f5;
}
#home .top .college .logo {
  margin: 0 20rpx;
  width: 150rpx;
  height: 150rpx;
}
#home .top .college .info .name {
  line-height: 87rpx;
  font-size: 35rpx;
}
#home .top .college .info .mes {
  font-size: 25rpx;
  color: #4D4D4D;
}
#home .top .college .info .mes text {
  margin-right: 18rpx;
}
#home .top .bulletin-box {
  background: #fcfcfc;
  padding: 0 30rpx 30rpx 30rpx;
}
#home .top .bulletin-box .bulletin {
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: inline-block;
  width: 100%;
  font-size: 25rpx;
  padding: 20rpx;
  background: #fff;
  border: 1px solid #f5f5f5;
  border-top: none;
}
