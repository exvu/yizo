{
    "customBaseDir": "/log/",
    "customDefaultAtt": {
        "type": "dateFile",
        "alwaysIncludePattern": true
    },
    "appenders": {
        "logDebug": {
            "pattern": "debug/yyyy-MM-dd.log",
            "exclude": "logDebug"
        },
        "logInfo": {
            "pattern": "info/yyyy-MM-dd.log",
            "exclude": "logInfo"
        },
        "logWarn": {
            "pattern": "warn/yyyy-MM-dd.log",
            "exclude": "logWarn"
        },
        "logErr": {
            "pattern": "err/yyyy-MM-dd.log",
            "exclude": "logErr"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "logInfo"
            ],
            "level": "debug"
        },
        "logDebug": {
            "appenders": [
                "logDebug"
            ],
            "level": "DEBUG"
        },
        "logInfo": {
            "appenders": [
                "logInfo"
            ],
            "level": "DEBUG"
        },
        "logWarn": {
            "appenders": [
                "logWarn"
            ],
            "level": "DEBUG"
        },
        "logErr": {
            "appenders": [
                "logErr"
            ],
            "level": "DEBUG"
        }
    }
}