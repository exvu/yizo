<view id="releaseList">
    <toast></toast>
    <alert></alert>
    <view class="title">
        <image src="../../../public/image/task.png" class="icon"></image>
        <view>发布任务</view>
    </view>
    <view class="form">
        <view class="form-row">
            <label class="form-label">标题</label>
            <input class="form-widget" placeholder="请填写标题" bindinput="formValueChange" data-name="title" />
        </view>
        <view class="form-row">
            <label class="form-label">性别限制</label>
            <view class="form-widget radio">
                <view class="radio-item {{form.gender_constraint==-1?'active':''}}" @tap="selectGender(-1)">不限</view>
                <view class="radio-item {{form.gender_constraint==0?'active':''}}" @tap="selectGender(0)">女</view>
                <view class="radio-item {{form.gender_constraint==1?'active':''}}" @tap="selectGender(1)">男</view>
            </view>
        </view>
        <view class="form-row">
            <label class="form-label">人数</label>
            <input class="form-widget" placeholder="请填写人数" bindinput="formValueChange" data-name="number" />
        </view>
        <view class="form-row">
            <label class="form-label">截至日期</label>
            <picker class="form-widget" mode="date" value="{{dueDate}}" start="{{startDate.date}}" end="{{endDate.date}}" bindchange="formValueChange"
                data-name="dueDate">
                <view class="picker" style="{{form.dueDate?'':'color:#808080;'}}">
                    {{form.dueDate ||"请选择日期"}}
                </view>
            </picker>
        </view>
        <view class="form-row">
            <label class="form-label">截至时间</label>
            <picker class="form-widget" mode="time" value="{{dueTime}}" start="{{startDate.time}}" end="23:59" bindchange="formValueChange"
                data-name="dueTime">
                <view class="picker" style="{{form.dueTime?'':'color:#808080;'}}">
                    {{form.dueTime ||"请选择时间"}}
                </view>
            </picker>
        </view>
        <view class="form-row">
            <label class="form-label">酬劳类型</label>
            <view class="form-widget radio">
                <view class="radio-item {{form.rewardType==='other'?'active':''}}" @tap="switchType({{'other'}})">其他</view>
                <view class="radio-item {{form.rewardType==='money'?'active':''}}" @tap="switchType({{'money'}})">现金</view>
            </view>
        </view>
        <view class="form-row" wx:if="{{form.rewardType==='money'}}">
            <label class="form-label">酬劳</label>
            <view class="form-widget">
                <input placeholder="请输入酬劳" bindinput="formValueChange" data-name="reward" style="margin-right:5rpx;" type="number" />元
            </view>
        </view>
        <view wx:else>
            <view class="radio" style="margin:10rpx 0;">
                <repeat for="{{otherReward}}">
                    <view class="radio-item {{item==form.reward?'active':''}}" @tap="switchReward({{item}})">{{item}}</view>
                </repeat>
                <view class="radio-item " @tap="addReward">自定义</view>
            </view>
            <view style="font-size:25rpx;color:#808080;padding:0 0 10rpx 20rpx;">"我的酬劳是{{form.reward}}"</view>
        </view>
        <view class="form-row">
            <label class="form-label">是否需要审核</label>
            <view class="form-widget radio">
                <view class="radio-item">是</view>
                <view class="radio-item" >否</view>
            </view>
        </view>
        <view class="form-row">
            <textarea placeholder="请填写具体信息(选填)" bindinput="formValueChange" data-name="content" style="width:100%;text-align:left;height:150rpx;padding:10rpx;line-height:37rpx;">
        </textarea>
        </view>
        <view style="background:#f8f8f8;font-size:25rpx;line-height:50rpx;padding-left:20rpx;">联系方式</view>
        <view class="form-row">
            <label class="form-label">手机号</label>
            <input class="form-widget" placeholder="请留下联系方式" bindinput="formValueChange" data-name="tel" />
        </view>
        <view class="form-row">
            <label class="form-label">联系人</label>
            <input class="form-widget" placeholder="请填写联系人" bindinput="formValueChange" data-name="concat" />
        </view>
    </view>
    <view class="release" @tap="release">发起求助</view>
</view>
</view>