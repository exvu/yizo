<view class="mine">
  <view class="header">
    <block wx:if="{{userInfo}}">
      <view class="info-box">
        <view class="user-info">
          <avatar :id="id"></avatar>
          <view class="right">
            <view class="info">
              <text class="item name">{{userInfo['nickname']}}</text>
              <text class="item iconfont icon-{{userInfo['gender']==0?'female':'male'}}"></text>
              <text class="item" style="font-size:25rpx;">一个月前</text>
            </view>
            <view class="create_time">{{userInfo['_c']}} 加入</view>
          </view>
          <view @tap="navigateTo({{'/pages/mine/setting/baseinfo/index'}})" class="editor">编辑</view>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="info-box">
        <view class="user-info">
          <avatar :id.sync="id"></avatar>
          <view @tap="navigateTo({{'/pages/account/signIn/index'}})">登录/注册</view>
        </view>
      </view>
    </block>
  </view>

