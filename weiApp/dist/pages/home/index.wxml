<view id="home">
  <view class="background">
    <view class="top"/>
  </view>
  <view class="main">
    <view class="top">
        <view class="college">
            <image src="{{college.logo}}" class="logo"/>
            <view class="info">
              <view class="name">{{college.college_name}}</view>
              <view class="mes">
                <text>人气:{{college.count}}</text>
                <text>昨日新增:{{college.oldcount}}</text>
              </view>
            </view>
          </view>
          <view class="bulletin-box">
            <view class="iconfont icon-setting bulletin">欢迎加入yizo校园</view>
          </view>
    </view>
    <view class="menu">
  <view class="menus">
    <block wx:for="{{$menu$menus}}" wx:for-index="$menu$menuIndex" wx:for-item="$menu$menu" wx:key="$menu$unique">
      <view class="nav-item {{$menu$current==$menu$menuIndex?'active':''}}" bindtap="$menu$onSwitch" data-type="menu" data-key="{{$menu$menu.key}}" data-index="{{$menu$menuIndex}}">
        <text class="title">{{$menu$menu.name}}</text>
      </view>
    </block>
  </view>
  <view class="sub-menus">
    <block wx:for="{{$menu$menus[$menu$current].subMenus}}" wx:for-index="$menu$subIndex" wx:for-item="$menu$subMenu" wx:key="$menu$unique">
      <view class="sub-nav-item {{$menu$menus[$menu$current].current==$menu$subIndex?'active':''}}" bindtap="$menu$onSwitch" data-key="{{$menu$subMenu.key}}" data-type="sub" data-index="{{$menu$subIndex}}">
        <text class="title">{{$menu$subMenu.name}}</text>
      </view>
    </block>
  </view>
</view>
    <view class="list">
        
<view class="run-order-list">
  <view class="app-toast {{$wantHelpOrder$toast$mask?'app-toast-mask':''}}"  wx:if="{{$wantHelpOrder$toast$show}}">
  <view style="display: inline-block">
    <view class="app-toast-box ">
      <view class="toast-icon">
        <view class="loading" wx:if="{{$wantHelpOrder$toast$icon=='loading'}}">
  <view style="left: 0;top: 0;"/>
  <view style="right: 0;top: 0;animation-delay: .4s;"/>
  <view style=" right: 0;bottom: 0;animation-delay: .8s;"/>
  <view style=" left: 0; bottom: 0;animation-delay: 1.2s;"/>
</view>
        <block wx:else>
          <view class="iconfont icon-{{$wantHelpOrder$toast$icon}}"/>
        </block>
      </view>
      <view class="toast-content">{{$wantHelpOrder$toast$title}}</view>
    </view>
  </view>
</view>
  <block wx:for="{{$wantHelpOrder$orderList}}" wx:for-index="$wantHelpOrder$index" wx:for-item="$wantHelpOrder$orderItem" wx:key="$wantHelpOrder$index">
    <view class="order-item" hover-class="order-item-active" bindtap="$wantHelpOrder$onView" data-id="{{$wantHelpOrder$orderItem.order_id}}">
      <block wx:if="{{$wantHelpOrder$orderItem.gender_constraint !== $wantHelpOrder$null}}">
        <view class="gender-constraint">
          <block wx:if="{{$wantHelpOrder$orderItem.gender_constraint == 0}}">
            <view class="ribbon-wrapper">
              <view class="ribbon" style="background-color: #FF0852;">限女生</view>
            </view>
          </block>
          <block wx:elif="{{$wantHelpOrder$orderItem.gender_constraint == 1}}">
            <view class="ribbon-wrapper">
              <view class="ribbon" style="background-color: #1C79FF;">限男生</view>
            </view>
          </block>
        </view>
      </block>
      <view class="item-top">
        
  {{$wantHelpOrder$orderItem.creater}}
  <image src="{{$wantHelpOrder$orderItem.creater?('https://localhost:3000/account/avatar/'+$wantHelpOrder$orderItem.creater+'.png'):$wantHelpOrder$avatar$url}}" class="avatar"/>

        <view class="info">
          <view>
            <text class="username">{{$wantHelpOrder$orderItem.creater_name}}</text>
            <view class="iconfont icon-{{$wantHelpOrder$orderItem.creater_gender==0?'female':'male'}}"/>
          </view>
          <view>
            <text class="time">{{$wantHelpOrder$orderItem._c}}</text>
          </view>
        </view>
      </view>
      <view class="item-content">
        
        <text class="reward" wx:if="{{$wantHelpOrder$orderItem['reward_type']==0}}">{{$wantHelpOrder$orderItem.reward}}</text>
        <text class="reward reward-money" wx:else>￥{{$wantHelpOrder$orderItem.reward}}</text>
        <view class="title ">{{$wantHelpOrder$orderItem.title}}</view>
        <view class="address">
          <view class="iconfont icon-point"/>
          {{$wantHelpOrder$orderItem.address}}
        </view>
      </view>
    </view>
  </block>
  <view class="load-more">{{$wantHelpOrder$limit.count > $wantHelpOrder$orderList.length?'努力加载中...':"没有更多了"}}</view>
</view>
    </view>
  </view>
</view>