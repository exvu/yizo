<view id="sign">
  <view class="app-toast {{$toast$mask?'app-toast-mask':''}}"  wx:if="{{$toast$show}}">
  <view style="display: inline-block">
    <view class="app-toast-box ">
      <view class="toast-icon">
        <view class="loading" wx:if="{{$toast$icon=='loading'}}">
  <view style="left: 0;top: 0;"/>
  <view style="right: 0;top: 0;animation-delay: .4s;"/>
  <view style=" right: 0;bottom: 0;animation-delay: .8s;"/>
  <view style=" left: 0; bottom: 0;animation-delay: 1.2s;"/>
</view>
        <block wx:else>
          <view class="iconfont icon-{{$toast$icon}}"/>
        </block>
      </view>
      <view class="toast-content">{{$toast$title}}</view>
    </view>
  </view>
</view>
  <view class="signBox">
    <view class="item">
      <image src="../../../public/image/male-avatar.png" class="logo"/>
    </view>
    <view class="item">
      <input placeholder="手机号" maxlength="11" type="number" bindinput="ontextChange" data-name="account"/>
    </view>
    <view class="item">
      <input type="password" placeholder="密码" bindinput="ontextChange" data-name="password"/>
    </view>
  </view>
  <view class="btn-controller">
    <button class="btn blue" bindtap="onSignIn">登录</button>
    <button class="btn" bindtap="jumpTo" data-url="/pages/sign/signUp/index">
            注册
        </button>
  </view>
  <view bindtap="redirectTo" data-url="/pages/sign/forgotPwd/index" class="link" style="text-align: right">
    忘记密码
  </view>
</view>